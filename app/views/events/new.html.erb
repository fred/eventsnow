<div class="show_event">
  <h2> <%= @title = "#{t('new')} #{t('event')}"%> </h2>
  
  <% form_for(@event, :html => { :multipart => true }) do |f| %>

    <%= f.error_messages %>
  
    <%= render :partial => 'form', :locals => { :f => f, :event => @event } %>

    <br />
    <%= f.submit t('save'), :class => "button" %>

  <% end %>

</div>