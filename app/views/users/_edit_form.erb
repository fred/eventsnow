<script type="text/javascript" src="/javascripts/tiny_mce_jquery/tiny_mce.js"></script>
<script type="text/javascript">
tinyMCE.init({
	mode : "exact",
	elements : "user_notes",
	theme : "advanced",
	skin : "o2k7",
	plugins : "safari,spellchecker,pagebreak,style,layer,table,save,advhr,advimage,advlink,emotions,iespell,inlinepopups,insertdatetime,preview,media,searchreplace,print,contextmenu,paste,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras,template",
	theme_advanced_buttons1 :  "save,newdocument,|,bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,styleprops,spellchecker,|,forecolor,backcolor",
	theme_advanced_buttons2 :  "cut,copy,paste,pastetext,pasteword,|,search,replace,|,bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,help,removeformat,cleanup,code,|,preview,fullscreen",
	theme_advanced_buttons3 :  "tablecontrols,|,hr,removeformat,visualaid,|,sub,sup,|,charmap,emotions,iespell,media,advhr,|,print,|,ltr,rtl",
	theme_advanced_toolbar_location : "top",
	theme_advanced_toolbar_align : "left",
	theme_advanced_statusbar_location : "bottom",
	theme_advanced_resizing : true,
	template_replace_values : {
		username : "<%= current_user.name %>",
		staffid : "<%= current_user.id %>"
	}
});
</script>

<label> Email
  <span class="small">
    <%= form.error_message_on :email,
      :prepend_text => "Email ",
      :append_text => " Email must be valid.",
      :css_class => "inputError" 
    %>
  </span>
</label>
<%= form.text_field :email, :class=>"wide" %>
<br clear="both"/>

<label> Login 
  <span class="small">
    <%= form.error_message_on :login,
      :prepend_text => "Login ",
      :append_text => ". You need a valid Login.",
      :css_class => "inputError" 
    %>
  </span>
</label>
<%= form.text_field :login, :class=>"wide" %>
<br clear="both"/>

<label>
  <%= form.object.new_record? ? "Password" : "Change password" %>
  <span class="small">
  <%= form.error_message_on :password,
    :prepend_text => "Password ",
    :append_text => ". You need a password.",
    :css_class => "inputError" 
  %>
  </span>
</label>
<%= form.password_field :password, :class=>"wide" %>
<br clear="both"/>

<label> Password Confirmation 
  <span class="small">
  <%= form.error_message_on :password,
    :prepend_text => "Password ",
    :append_text => ".",
    :css_class => "inputError" 
  %>
  </span>
</label>
<%= form.password_field :password_confirmation, :class=>"wide" %>

<label> Name 
  <span class="small">
    <%= form.error_message_on :name,
      :prepend_text => "Name ",
      :append_text => ". Have a real name?",
      :css_class => "inputError" 
    %>
  </span>
</label>
<%= form.text_field :name, :class=>"wide" %>
<br clear="both"/>

<label> Address </label>
<%= form.text_field :address, :class=>"wide" %>
<br clear="both"/>

<label> Phone </label>
<%= form.text_field :phone, :class=>"wide" %>
<br clear="both"/>

<label> Timezone </label>
&nbsp; <%= form.time_zone_select :time_zone %>
<br clear="both"/>


<% if @user.avatar.exists? %>

  <br clear="both"/>
  <b>Change Your Photo</b>
  
  <br clear="both"/>
  <%= form.file_field :avatar %>
  
  <br clear="both"/>
  <h3>Current Photo</h3>
  <%= image_tag(@user.avatar.url(:large)) %>
  
<% else %>

  <br clear="both"/>
  <b>Upload Your Photo</b>
  
  <br clear="both"/>
  <%= form.file_field :avatar %>
  
<% end %>

<br clear="both"/>
<b>About Myself</b>

<br clear="both"/>
<%= form.text_area :notes %>
